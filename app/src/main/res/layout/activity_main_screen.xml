<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundBlue"
    tools:context=".RegistrationActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_sendotp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/message6"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAlignment="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="EXPENSE  MANAGER"
                android:fontFamily="@font/originalsurfer_regular"
                android:textColor="@color/appTextColor"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="23dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginTop="27dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/appBackgroundBlue">





            <Button
                android:id="@+id/loginmain_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/originalsurfer_regular"
                android:text="LOGIN NOW"></Button>

            <Button
                android:id="@+id/registermain_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/originalsurfer_regular"

                android:text="REGISTER NOW"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/originalsurfer_regular"
                android:text="CREATE YOUR ACCOUNT"
                android:textColor="@color/alternateBackgroundBlue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:textSize="18dp"
                />




        </LinearLayout>

    </LinearLayout>


</ScrollView>