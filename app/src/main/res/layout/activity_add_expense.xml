<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AddExpenseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Total Expense Amount"
            android:textColor="@color/appTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/originalsurfer_regular"
            />
        <EditText
            android:id="@+id/MonthlyLimit"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="Rs 30000 /-"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textColor="@color/appAlternateTextcolor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/originalsurfer_regular"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/limitinput"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/originalsurfer_regular"
            android:text="Categories"
            android:textColor="@color/appTextColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="234dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10sp"
            tools:ignore="RtlHardcoded"></Spinner>

        <Button
            android:id="@+id/save_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="70dp"
            android:background="@drawable/limitbox"
            android:text="SAVE EXPENSE"
            android:textStyle="bold"
            android:fontFamily="@font/originalsurfer_regular"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>